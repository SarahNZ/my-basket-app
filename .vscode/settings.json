{
    "IDX.aI.enableInlineCompletion": true,
    "IDX.aI.enableCodebaseIndexing": true,
    "git.ignoreLimitWarning": true,
    "yaml.schemas": {
        "https://www.artillery.io/schema.json": []
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false
    },
    "github.copilot.advanced": {
        "excludePatterns": [
        "**/.env*",
        "**/*.env",
        "**/secrets/**",
        "**/credentials/**",
        "**/*.pem",
        "**/*.key"
        ]
    }
}
